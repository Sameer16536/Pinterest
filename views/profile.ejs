<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile Page</title>
    <link rel="stylesheet" href="stylesheets/profile.css">

</head>
<!-- username: sameer11  password : Sameer@11 -->
<body>
    <div class="container">
        <img src="images/profile_pic/IMG_7424.JPG" alt="Profile Picture" class="profile-pic"> 
    
        
        <div class="info">
            <h2 class="username"><%= user.fullname  %></h2>
            <h2 class="username">
                <%= user.username %>
            </h2>
            <h2 class="username">
                <%= user.email %>
            </h2>

            <p class="bio">Web developer from India</p>
            <p class="bio">Lorem ipsum dolor sit, amet consectetur adipisicing elit. Tenetur, suscipit? Corrupti, magni!
            </p>
        </div>
        <form action="/upload" method="post" enctype="multipart/form-data">
            <input type="file" name="file" >
            <input type="text" name="imagecaption" id="" placeholder="Some Caption">
            <button type="submit" class="logout">upload</button>
        </form>
        <h3>Pins</h3>
        <div class="pins">
            <% user.posts.forEach(function(post) { %>
                <div class="pin-container">
                    <img src="/images/uploads/<%= post.imageURL %>" class="pin" alt="" >
                    <h5 class="pin-text"><%= post.imageText %></h5>

                </div>
                
                
            <%}) %>
           
        </div>
       
        <a href="/logout"><button class="logout">Logout</button></a>
        
    </div>
</body>

</html>